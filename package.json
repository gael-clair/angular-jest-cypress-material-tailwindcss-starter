{
  "name": "angular-jest-cypress-material-tailwindcss-starter",
  "version": "0.0.0",
  "description": "Angular + Jest + Cypress + Material + TailwindCSS starter project",
  "license": "MIT",
  "private": true,
  "scripts": {
    "init": "cross-var npx replace-in-file /angular-jest-cypress-material-tailwindcss-starter/gi \"$npm_package_name\" README.md,package.json,angular.json,src/app/app.component.ts,src/app/app.component.spec.ts --isRegex",
    "ng": "ng",
    "prestart": "ngtw build",
    "start": "concurrently -k -c \"green,yellow\" -n \"Serve,TailwindCSS\" \"ng serve\" \"ngtw watch\"",
    "build": "ngtw build && ng build",
    "build:prod": "ngtw build --purge && ng build --prod",
    "doc": "compodoc -p tsconfig.json --theme material",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage ",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:ci": "jest --ci --runInBand --coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "lint:ci": "ng lint --format junit > ./reports/lint.xml",
    "lint:style": "stylelint \"src/app/**/*.scss\" \"src/styles.scss\" \"src/tailwind.css\"",
    "lint:style:ci": "stylelint \"src/app/**/*.scss\" \"src/styles.scss\" \"src/tailwind.css\" --custom-formatter \"node_modules/stylelint-junit-formatter\" > ./reports/style.xml",
    "lint:style:fix": "stylelint \"src/app/**/*.scss\" \"src/styles.scss\" \"src/tailwind.css\" --fix",
    "e2e": "concurrently --success first -k -c \"green,yellow\" -n \"Serve,Tests\" \"ng serve --configuration=e2e\" \"wait-on http-get://localhost:4200/ && cypress open\"",
    "e2e:ci": "concurrently --success first -k -c \"green,yellow\" -n \"Serve,Tests\" \"ng serve --configuration=e2e\" \"wait-on http-get://localhost:4200/ && cypress run\""
  },
  "dependencies": {
    "@angular/animations": "~9.1.7",
    "@angular/cdk": "^9.2.3",
    "@angular/common": "~9.1.7",
    "@angular/compiler": "~9.1.7",
    "@angular/core": "~9.1.7",
    "@angular/forms": "~9.1.7",
    "@angular/material": "^9.2.3",
    "@angular/platform-browser": "~9.1.7",
    "@angular/platform-browser-dynamic": "~9.1.7",
    "@angular/router": "~9.1.7",
    "hammerjs": "^2.0.8",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^9.1.0",
    "@angular-devkit/build-angular": "~0.901.6",
    "@angular/cli": "~9.1.6",
    "@angular/compiler-cli": "~9.1.7",
    "@briebug/cypress-schematic": "^3.3.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@compodoc/compodoc": "^1.1.11",
    "@cypress/code-coverage": "^3.7.2",
    "@cypress/webpack-preprocessor": "5.2.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jest": "^25.2.2",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "concurrently": "^5.2.0",
    "cross-var": "^1.1.0",
    "cypress": "4.5.0",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "istanbul-instrumenter-loader": "^3.0.1",
    "istanbul-lib-coverage": "^3.0.0",
    "jest": "^26.0.1",
    "jest-html-reporter": "^3.1.0",
    "jest-junit": "^10.0.0",
    "jest-preset-angular": "^8.2.0",
    "lint-staged": "^10.2.2",
    "ng-tailwindcss": "^2.2.1",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-junit-formatter": "^0.2.2",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-prettier": "^1.1.2",
    "tailwindcss": "^1.4.6",
    "ts-loader": "7.0.4",
    "ts-node": "^8.10.1",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "~3.8.3",
    "wait-on": "^5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
